{
    "args-expect": {
        "base": "../node_modules/args-expect/lib",
        "src": "*.js"
    },
    "bootstrap":   {
        "base": "../node_modules/bootstrap/dist",
        "src": "**/*"
    },
    "html5shiv": {
        "base": "../node_modules/html5shiv/dist",
        "src": "**/*.js"
    },
    "jquery":      {
        "base": "../node_modules/jquery/dist",
        "src": [
            "*.{js,map}",
            "!cdn"
        ]
    },
    "modulex":     {
        "base": "../node_modules/modulex/build",
        "src": "**/*.js"
    },
    "promise-polyfill": {
        "base": "../node_modules/promise-polyfill/",
        "src": [
            "Promise.js",
            "Promise.min.js"
        ]
    },
    "webcomponentsjs": {
        "base": "../node_modules/webcomponents.js/",
        "src": "*.js"
    },
    "xtemplate": {
        "base": "../node_modules/xtemplate/build",
        "src": "*.js"
    }
}
